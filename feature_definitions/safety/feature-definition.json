{
  "id": "safety",
  "version": "1.0.1",
  "name": "Safety (via pipx)",
  "documentationURL": "http://github.com/aps831/devcontainers-features/tree/master/src/safety",
  "description": "Safety checks Python dependencies for known security vulnerabilities and suggests the proper remediations for vulnerabilities detected",
  "options": {
    "version": {
      "default": "latest",
      "description": "Select the version of Safety to install.",
      "proposals": ["latest"],
      "type": "string"
    }
  },
  "installsAfter": ["ghcr.io/devcontainers-contrib/features/pipx-package"],
  "dependencies": [
    {
      "feature": "ghcr.io/devcontainers-contrib/features/pipx-package",
      "options": {
        "package": "safety"
      }
    }
  ],
  "install_command": "echo 'Done!'",
  "test_command": "safety --version"
}
