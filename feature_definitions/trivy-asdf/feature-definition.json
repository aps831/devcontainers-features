{
  "id": "trivy-asdf",
  "version": "1.0.2",
  "name": "Trivy (via asdf)",
  "documentationURL": "http://github.com/aps831/devcontainers-features/tree/master/src/trivy-asdf",
  "description": "Trivy is a comprehensive and versatile security scanner.",
  "options": {
    "version": {
      "default": "latest",
      "description": "Select the version of Trivy to install.",
      "proposals": ["latest"],
      "type": "string"
    }
  },
  "installsAfter": ["ghcr.io/devcontainers-contrib/features/asdf-package"],
  "dependencies": [
    {
      "feature": "ghcr.io/devcontainers-contrib/features/asdf-package",
      "options": {
        "plugin": "trivy",
        "version": "$options.version"
      }
    }
  ],
  "install_command": "echo 'Done!'",
  "test_command": "trivy --version"
}
